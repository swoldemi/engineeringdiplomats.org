{% extends "layout.jinja2" -%}
{% block body -%}
{% include "_partials/_flash.jinja2" -%}
<div class="box">
    <p class="has-text-centered">
        Upcoming fundraisers for the Engineering Diplomats!
    </p>
</div>
<section class="section">
    <div class="container">
        {%- if fundraisers.count_documents -%}
        {% for fundraiser in fundraisers -%}
        <div class="columns">
            <div class="column is-full is-centered">
                <div class="box">
                    <div class="box-content">
                        <div class="columns">
                            <div class="column is-2 is-centered">
                                <img src=" {{ fundraiser.logo }}">
                            </div>
                            <div class="column">
                                <div class="box-content-text">
                                    <p>
                                        <h3 class="title is-4">
                                            {{ fundraiser.vendor }} @ {{ fundraiser.location }}
                                        </h3>
                                        <h4 class="subtitle is-4">
                                            Date: {{ fundraiser.date}}
                                            <br />
                                            Time: {{ fundraiser.time }}
                                        </h4>
                                        <h5>
                                            {%- if fundraiser.flyer is not none %}
                                            <a href="{{ fundraiser.flyer }}">
                                                <button class="button is-ttu-red is-link">
                                                    Click here to view flyer
                                                </button>
                                            </a>
                                            {% endif -%}
                                        </h5>
                                        {%- if fundraiser.note is not none %}
                                        <article class="message is-info is-note">
                                            <div class="message-body">
                                                {{ fundraiser.notes }}
                                            </div>
                                        </article>
                                        {% endif -%}
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {%- endfor -%}
        {%- else -%}
        <div class="box">
            <p class="has-text-centered">
                There are currently no upcoming fundraisers.
            </p>
        </div>
        {%- endif %}
    </div>
</section>
{%- endblock %}